@model TutionClass.Models.Payment

@{
    ViewBag.Title = "Add Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Payment</h2>

@using (Html.BeginForm("Create", "Payment", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.StudentID)
        @Html.TextBoxFor(model => model.StudentID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Year)
        @Html.TextBoxFor(model => model.Year, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Month)
        @Html.TextBoxFor(model => model.Month, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SubjectName)
        @Html.TextBoxFor(model => model.SubjectName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Grade)
        @Html.TextBoxFor(model => model.Grade, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PaymentMethod)
        @Html.TextBoxFor(model => model.PaymentMethod, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="@Url.Action("Index", "Payment")" class="btn btn-default">Cancel</a>
}
