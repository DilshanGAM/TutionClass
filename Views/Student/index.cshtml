@model List<TutionClass.Models.Student>

@{
    ViewBag.Title = "Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student List</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Grade</th>
                <th>School</th>
                <th>Gender</th>
                <th>Action</th> <!-- New column for Delete button -->
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentID</td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Grade</td>
                    <td>@student.School</td>
                    <td>@student.Gender</td>
                    <td>
                        <form action="@Url.Action("Delete", "Student")" method="post">
                            @Html.Hidden("studentID", student.StudentID) <!-- Hidden field to pass studentID -->
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Student/AddStudent" class="btn btn-primary">Add Student</a>
}
else
{
    <p>No students found.</p>
}
